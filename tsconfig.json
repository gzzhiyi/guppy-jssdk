{
  "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "removeComments": true,
      "outDir": "./dist/",
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}